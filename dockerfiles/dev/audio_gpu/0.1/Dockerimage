# Use the TensorFlow GPU image as the base
FROM tensorflow/tensorflow:2.17.0-gpu

# Environment settings
ENV TIMEZONE America/Mexico_City
ENV LANG C.UTF-8
ENV LC_ALL C.UTF-8
ENV DEBIAN_FRONTEND noninteractive
ENV DEB_PACKAGES="sudo vim less git wget curl ca-certificates ffmpeg libsm6 libxext6"
ENV PIP_PACKAGES_COMMON="jsonpickle humanfriendly PyYAML>=5.3.1"
ENV JUPYTERLAB="jupyter jupyterlab==3.4.3"
ENV PIP_PACKAGES_TF_KERAS="keras_cv"
ENV PIP_PACKAGES_AUDIO="python-dotenv==1.0.0 psycopg2-binary==2.9.6 scikit-maad>=1.3.12 scikit-image soundfile"
ENV PYTHON_EXEC=python

# Update and install essential packages
RUN apt-get update && export $DEBIAN_FRONTEND && echo $TIMEZONE > /etc/timezone && apt-get install -y tzdata
RUN apt-get install -y $DEB_PACKAGES && pip install --upgrade pip && rm -rf /var/lib/apt/lists/*

# Install Python packages
RUN pip install $PIP_PACKAGES_COMMON
RUN pip install $PIP_PACKAGES_TF_KERAS
RUN pip install $JUPYTERLAB
RUN pip install $PIP_PACKAGES_AUDIO

# Install compatible PyTorch, torchaudio, and torchvision with CUDA
RUN pip install torch==2.0.0+cu118 torchvision==0.15.1+cu118 torchaudio==2.0.0 --extra-index-url https://download.pytorch.org/whl/cu118

# Install Node.js for JupyterLab extensions
RUN curl -sL https://deb.nodesource.com/setup_16.x | sudo -E bash - && apt-get install -y nodejs

# Configure Jupyter Notebook with the password 'qwerty'
RUN jupyter notebook --generate-config && \
    sed -i "s/# c.NotebookApp.password = .*/c.NotebookApp.password = u'sha1:a9d1a4d54425:fe580e8f88feacf9a9e0978cc7e246cf4017ae06'/" ~/.jupyter/jupyter_notebook_config.py

# Copy the password configuration for Jupyter Server
RUN cp ~/.jupyter/jupyter_notebook_config.py ~/.jupyter/jupyter_server_config.py

# Volume for sharing data
VOLUME ["/shared_volume"]

# Set working directory
WORKDIR /

# Set JupyterLab entry point
ENV NB_PREFIX audio_processing
ENTRYPOINT ["/usr/local/bin/jupyter", "lab", "--ip=0.0.0.0", "--no-browser", "--allow-root", "--LabApp.allow_origin='*'", "--LabApp.base_url=audio_processing"]
